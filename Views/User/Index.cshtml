@model System.Collections.Generic.List<Library.ViewModels.UserViewModels.UserIndexVm>

@{
    ViewBag.Title = "Список выданных книг";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <div class="text-center">
        <h3>Книги еще не были выданы</h3>
    </div>
}
else
{
    <div class="row justify-content-around">
        @foreach (var indexVm in Model)
        {
            <div class="card col-3 m-3">
                @foreach (var indexVmBook in indexVm.Books)
                {
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@indexVmBook.Image" class="card-img w-100 h-100" alt="productImage">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="text-center card-header">@indexVmBook.Name</h3>
                                    <div class="card-body d-flex flex-nowrap">
                                        <ul class="card-text row">
                                            <li>Автор: @indexVmBook.Author</li>
                                            <li>Год выпуска: @indexVmBook.ReleaseDate</li>
                                            <li>Категория: @indexVmBook.Category</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-nowrap">
                        <ul class="card-text row">
                            <li>Получил книгу: @indexVm.Name</li>
                            <li>Email: @indexVm.Email</li>
                        </ul>
                    </div>
                }
            </div>    
        }
    </div>
}