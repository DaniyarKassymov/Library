@model Library.ViewModels.UserViewModels.UserIndexVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card w-50">
        <h3 class="text-center card-header">Заполните форму</h3>
        <div class="card-body">
            <div class="card-text row">
                <form asp-action="PersonalSite" asp-controller="User" method="post">
                    <div>
                        <label for="email" class="mb-2">Email:</label>
                        <input asp-for="Email"
                               type="text"
                               class="form-control"
                               id="email">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark my-3">
                            Перейти в личный кабинет
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
