@model Library.ViewModels.UserViewModels.UserAddVm

@{
    ViewBag.Title = "Добавление пользователя";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card w-50">
        <h3 class="text-center card-header">Заполните форму</h3>
        <div class="card-body">
            <div class="card-text row">
                <form asp-action="Add" method="post">
                    <div>
                        <label for="name" class="mb-2">Имя:</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name"
                               type="text"
                               class="form-control"
                               id="name">
                    </div>
                    <div>
                        <label for="surname" class="mb-2">Фамилия:</label>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                        <input asp-for="Surname"
                               type="text"
                               class="form-control"
                               id="surname">
                    </div>
                    <div>
                        <label for="email" class="mb-2">Email:</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email"
                               type="text"
                               class="form-control"
                               id="email">
                    </div>
                    <div>
                        <label for="phoneNumber" class="mb-2">Номер телефона:</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <input asp-for="PhoneNumber"
                               type="text"
                               class="form-control"
                               id="phoneNumber">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark my-3">
                            Добавить пользователя
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}