@model List<Library.ViewModels.BookViewModels.BookIndexVm>

@{
    ViewBag.Title = "Список книг";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <div class="text-center">
        <h3>Книги еще не были добавлены</h3>
    </div>
}
else
{
    <div class="row justify-content-around">
        @foreach (var indexVm in Model)
            {
                <div class="card col-3 m-3">
                    <img src="@indexVm.Image" alt="productImage" class="card-img w-100 h-100">
                    <h3 class="text-center card-header">@indexVm.Name</h3>
                    <div class="card-body d-flex flex-nowrap">
                        <ul class="card-text row">
                            <li>Автори книги: @indexVm.Author</li>
                            <li>Статус: @indexVm.BookState</li>
                        </ul>
                    </div>
                    <div class="card-footer d-flex justify-content-around">
                        <a asp-action="TakeBook" asp-route-id="@indexVm.Id" class="btn btn-outline-dark">Получить</a>
                        <a asp-action="Details" asp-route-id="@indexVm.Id" class="btn btn-outline-dark">Подробнее</a>
                    </div>
                </div>    
            }
    </div>
}
