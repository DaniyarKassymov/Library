@model Library.ViewModels.BookViewModels.BookIndexVm

@{
    ViewBag.Title = "Получить книгу";
    Layout = "_Layout";
}

<div class="row justify-content-around">
    <div class="card col-3 m-3">
        <img src="@Model.Image" alt="productImage" class="card-img w-100 h-100">
        <h3 class="text-center card-header">@Model.Name</h3>
        <div class="card-body d-flex flex-nowrap">
            <ul class="card-text row">
                <li>Автори книги: @Model.Author</li>
                <li>Статус: @Model.BookState</li>
            </ul>
        </div>
    </div> 
</div>

<div class="d-flex justify-content-center">
    <div class="card w-50">
        <h3 class="text-center card-header">Заполните форму</h3>
        <div class="card-body">
            <div class="card-text row">
                <form asp-action="TakeBook" asp-controller="User" method="post">
                    <div>
                        <label for="email" class="mb-2">Email:</label>
                        <input asp-for="Email"
                               type="text"
                               class="form-control"
                               id="email">
                    </div>
                    <input type="hidden" asp-for="Id" value="@Model.Id">
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark my-3">
                            Добавить книгу
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>