@model Library.ViewModels.BookViewModels.BookDetailsVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Image" class="card-img w-100 h-100" alt="productImage">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="text-center card-header">@Model.Name</h3>
                <div class="card-body d-flex flex-nowrap">
                    <ul class="card-text row">
                        <li>Автор: @Model.Author</li>
                        <li>Год выпуска: @Model.ReleaseDate</li>
                        <li>Категория: @Model.Category</li>
                        <li>Дата добавления: @Model.AddDate</li>
                        <li>Описание: @Model.Description</li>
                        <li>Состояние: @Model.BookState</li>
                    </ul>
                </div>
                <div class="card-footer d-flex justify-content-around">
                    <a asp-action="Index" class="btn btn-outline-dark">На главную</a>
                    <a asp-action="TakeBook" asp-route-id="@Model.Id" class="btn btn-outline-dark">Получить</a>
                </div>
            </div>
        </div>
    </div>
</div>
