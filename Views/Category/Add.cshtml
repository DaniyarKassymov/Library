@model Library.ViewModels.CategoryViewModels.CategoryAddVm

@{
    ViewBag.Title = "Добавление категории";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card w-50">
        <h3 class="text-center card-header">Заполните форму</h3>
        <div class="card-body">
            <div class="card-text row">
                <form asp-action="Add" method="post">
                    <div>
                        <label for="name" class="mb-2">Имя:</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name"
                               type="text"
                               class="form-control"
                               id="name">
                    </div>
                    <div>
                        <label for="description" class="mb-2">Описание:</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <input asp-for="Description"
                               type="text"
                               class="form-control"
                               id="description">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark my-3">
                            Добавить категорию
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}